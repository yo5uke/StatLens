---
const { pathname } = Astro.url;
const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;

const navItems = [
  { href: base, label: 'Home' },
  { href: `${base}about/`, label: 'About' },
  { href: `${base}tips/`, label: 'Tips' },
  { href: `${base}projects/`, label: 'Projects' },
  { href: `${base}blog/`, label: 'Blog' },
];
---

<nav id="navbar" class="fixed top-0 left-0 right-0 z-50 bg-white dark:bg-gray-900 border-b border-gray-200 dark:border-gray-700 transition-transform duration-300">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <a href={base} class="text-xl font-bold text-[#98D8C8] hover:text-[#FF6F61] transition-colors">
        StatLens
      </a>

      <div class="flex items-center gap-6">
        {navItems.map((item) => (
          <a
            href={item.href}
            class:list={[
              "text-sm font-medium transition-colors hover:text-[#FF6F61]",
              pathname === item.href || (item.href !== base && pathname.startsWith(item.href))
                ? "text-[#FF6F61]"
                : "text-gray-600 dark:text-gray-300"
            ]}
          >
            {item.label}
          </a>
        ))}

        <button
          id="theme-toggle"
          class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors"
          aria-label="Toggle theme"
        >
          <svg id="theme-toggle-dark-icon" class="w-5 h-5 hidden" fill="currentColor" viewBox="0 0 20 20">
            <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
          </svg>
          <svg id="theme-toggle-light-icon" class="w-5 h-5 hidden" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" fill-rule="evenodd" clip-rule="evenodd"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
</nav>

<script is:inline>
  function initThemeToggle() {
    const themeToggle = document.getElementById('theme-toggle');
    const darkIcon = document.getElementById('theme-toggle-dark-icon');
    const lightIcon = document.getElementById('theme-toggle-light-icon');

    if (!themeToggle || !darkIcon || !lightIcon) return;

    const updateIcons = () => {
      if (document.documentElement.classList.contains('dark')) {
        darkIcon.classList.remove('hidden');
        lightIcon.classList.add('hidden');
      } else {
        darkIcon.classList.add('hidden');
        lightIcon.classList.remove('hidden');
      }
    };

    updateIcons();

    themeToggle.onclick = () => {
      document.documentElement.classList.toggle('dark');
      const isDark = document.documentElement.classList.contains('dark');
      localStorage.setItem('theme', isDark ? 'dark' : 'light');
      updateIcons();
    };
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initThemeToggle);
  } else {
    initThemeToggle();
  }

  document.addEventListener('astro:page-load', initThemeToggle);

  // ナビゲーションバーのスクロール動作
  function initNavbarScroll() {
    const navbar = document.getElementById('navbar');
    if (!navbar) return;

    let lastScrollY = window.scrollY;
    let ticking = false;

    function updateNavbar() {
      const currentScrollY = window.scrollY;

      if (currentScrollY <= 0) {
        // 最上部では常に表示
        navbar.style.transform = 'translateY(0)';
      } else if (currentScrollY < lastScrollY) {
        // 上方向スクロール: 表示
        navbar.style.transform = 'translateY(0)';
      } else if (currentScrollY > lastScrollY && currentScrollY > 100) {
        // 下方向スクロール（100px以上スクロールした場合）: 非表示
        navbar.style.transform = 'translateY(-100%)';
      }

      lastScrollY = currentScrollY;
      ticking = false;
    }

    function onScroll() {
      if (!ticking) {
        window.requestAnimationFrame(updateNavbar);
        ticking = true;
      }
    }

    window.addEventListener('scroll', onScroll, { passive: true });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initNavbarScroll);
  } else {
    initNavbarScroll();
  }

  document.addEventListener('astro:page-load', initNavbarScroll);
</script>
